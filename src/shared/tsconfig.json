{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "sourceMap": true,
        "types": [
            "reflect-metadata"
        ],
        "moduleResolution": "node",
        "lib": [
            "es6"
        ],
        "outDir": "./lib"
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}